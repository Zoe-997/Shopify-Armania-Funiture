{% liquid
  assign sid = section.id 
  assign image = section.settings.image
  assign style = section.settings.style
%}
{%- for i in (1..1) -%}
  <section id="section-{{ sid }}" class="{{ style }}">       
    <div class="{{ section.settings.layout }}">
      <div class="inner-section">
        {% if style == 'style-2' %}
          <div class="row">
        {% endif %}
          {% if style == 'default' or style == 'style-2' %}
            <div class="section-media{% if style == 'style-2' %} col-md-6 col-12 col-item {% endif %}">
              <div class="images">
                {%- if image != blank -%}
                  <img class="lazyload" loading="lazy" data-src="{{ image | img_url: '1296x' }} width="1296" height="auto" alt="{{ image.alt }}"/>
                {%- else -%}
                  {%- if style == 'style-2' -%}
                    {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- else -%}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                {%- endif -%}
              </div> 
            </div>            
          {% endif %}
          <div class="section-content{% if style == 'style-2' %} col-md-6 col-12 col-item {% endif %}">
            {% if section.settings.title != blank %}<h2 class="section-title">{{ section.settings.title }}</h2>{% endif %}
            {% if section.settings.description != blank %}<div class="description">{{ section.settings.description }}</div>{% endif %}
          </div>
        {% if style == 'style-2' %}
          </div>            
        {% endif %}
      </div>
    </div>
  </section>
{%- endfor -%}

{%- style -%}
  #section-{{ sid }}{
    color: {{ section.settings.color }};
    background-color: {{ section.settings.bg_color }};
  }

  #section-{{ sid }} .section-title{
    color: {{ section.settings.color_heading }};
  }

  #section-{{ sid }} a{
    color: {{ section.settings.color_link }};
  }

  #section-{{ sid }} a:hover{
    color: {{ section.settings.color_hover }};
  }
{%- endstyle -%}
{%- render 'section_style' -%}

